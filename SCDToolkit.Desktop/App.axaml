<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SCDToolkit.Desktop"
             x:Class="SCDToolkit.Desktop.App"
             RequestedThemeVariant="Dark">
  <Application.Resources>
    <Color x:Key="SystemAccentColor">#3B82F6</Color>
    <Color x:Key="SystemAccentColorDark1">#2563EB</Color>
    <Color x:Key="SystemAccentColorDark2">#1D4ED8</Color>
    <Color x:Key="SystemAccentColorDark3">#1E40AF</Color>
    <Color x:Key="SystemAccentColorLight1">#60A5FA</Color>
    <Color x:Key="SystemAccentColorLight2">#93C5FD</Color>
    <Color x:Key="SystemAccentColorLight3">#BFDBFE</Color>
  </Application.Resources>
  <Application.Styles>
    <FluentTheme />
    
    <!-- Force text colors globally to prevent Windows light mode issues -->
    <Style Selector="Button">
      <Setter Property="Foreground" Value="#e8eaee" />
    </Style>
    <Style Selector="Button:pointerover">
      <Setter Property="Foreground" Value="#ffffff" />
    </Style>
    <Style Selector="MenuItem">
      <Setter Property="Foreground" Value="#e8eaee" />
    </Style>
    <Style Selector="TextBlock">
      <Setter Property="Foreground" Value="#e8eaee" />
    </Style>
    <Style Selector="TextBox">
      <Setter Property="Foreground" Value="#e8eaee" />
    </Style>
    <Style Selector="NumericUpDown">
      <Setter Property="Foreground" Value="#e8eaee" />
    </Style>
    <Style Selector="ComboBox">
      <Setter Property="Foreground" Value="#e8eaee" />
    </Style>
    <Style Selector="CheckBox">
      <Setter Property="Foreground" Value="#e8eaee" />
    </Style>
    <Style Selector="RadioButton">
      <Setter Property="Foreground" Value="#e8eaee" />
    </Style>
  </Application.Styles>
</Application>
